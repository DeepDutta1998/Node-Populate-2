  <form action="/add-product" method="post">
   <div class="row">
    <div class="col-md-4">
   <label >Category :</label>
    <select name="categoryName" id="categoryName">
      <option  selected disabled> choose category name </option>
      <% Allcategory.map((val)=>{%>
        <option value="<%=val._id%>"><%=val.categoryName%></option>
        <%})%>
  </select>
    </div>
    <div class="col-md-4">
      <label >Category Type :</label>
      <select name="categoryType" id="categoryType">
        <option  selected disabled> choose category type</option>
        <% Allcategory.map((val)=>{%>
          <option value="<%=val._id%>"><%=val.categoryType%></option>
          <%})%>
    </select>
    </div>
    <div class="col-md-4">
        <label> Sub Category :</label>
        <select name="subCategory" id="subCategory">
          <option  selected disabled> choose sub-category name </option>
          <% AllSubCategory.map((val)=>{%>
            <option value="<%=val._id%>"><%=val.subCategory%></option>
            <%})%>
      </select>
    </div>
   </div>
        <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label>Enter Product Name</label>
          <input type="text" name="productName" class="form-control" required />
        </div>
      </div><br>
      <div class="col-md-12">
        <div class="form-group">
          <label>Enter Product Price</label>
          <input type="number" name="productPrice" class="form-control" required />
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block">Add</button>
  </form>
</div>


